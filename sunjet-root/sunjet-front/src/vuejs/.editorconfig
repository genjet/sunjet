root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 160

[*.{js,jsx,ts,tsx,vue}]
indent_size = 2

[*.{css,styl,scss,less,sass}]
indent_size = 2

[*.html]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{json,yml}]
indent_size = 2
